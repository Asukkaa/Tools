<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.lang.*?>
<AnchorPane fx:id="anchorPane_MV" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" stylesheets="@../css/Styles.css"
            fx:controller="priv.koishi.tools.Controller.MoveFileController">
    <VBox spacing="10" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="30">
        <HBox spacing="10">
            <Label prefHeight="25" text="移动后操作:"/>
            <ChoiceBox fx:id="oldFileType_MV" prefHeight="20" prefWidth="150" style="-fx-cursor: hand">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="保留源文件"/>
                        <String fx:value="将源文件放入回收站"/>
                        <String fx:value="删除源文件"/>
                    </FXCollections>
                </items>
                <value>
                    <String fx:value="保留源文件"/>
                </value>
            </ChoiceBox>

            <Label prefHeight="25" text="添加数据设置:"/>
            <ChoiceBox fx:id="addFileType_MV" prefHeight="25" prefWidth="100" style="-fx-cursor: hand">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="添加文件"/>
                        <String fx:value="添加文件夹"/>
                    </FXCollections>
                </items>
                <value>
                    <String fx:value="添加文件"/>
                </value>
            </ChoiceBox>

            <Label prefHeight="25" text="需要移动的文件后缀名:"/>
            <TextField fx:id="filterFileType_MV" prefHeight="20" prefWidth="300"/>
        </HBox>


        <HBox spacing="10">
            <Button fx:id="outPathButton_MV" onAction="#exportPath" style="-fx-cursor: hand" text="选择目标文件夹位置"/>
            <Label fx:id="outPath_MV" prefHeight="25" style="-fx-font-size: 15px;"/>
        </HBox>

        <HBox fx:id="fileNumberHBox_MV" spacing="10">
            <Button fx:id="addFileButton_MV" onAction="#addFiles" styleClass="cadetblue-button" text="选择要移动的文件"/>
            <Button fx:id="clearButton_MV" onAction="#removeAll" style="-fx-cursor: hand" text="清空列表"/>
            <Button fx:id="moveButton_MV" onAction="#moveAll" styleClass="cornflowerblue-button" text="开始移动"/>
            <CheckBox fx:id="openDirectory_MV" prefHeight="25" selected="true"
                      style="-fx-cursor: hand" text="移动后打开文件夹"/>

            <Label fx:id="fileNumber_MV" alignment="CENTER_RIGHT" prefHeight="20" text="列表为空"/>
        </HBox>

        <TableView fx:id="tableView_MV" onDragDropped="#handleDrop" onDragOver="#acceptDrop">
            <placeholder>
                <Label text="拖拽 或点击 选择要读取的文件夹 按钮向列表添加文件"/>
            </placeholder>

            <columns>
                <TableColumn fx:id="index_MV" text="序号" sortable="false"/>
                <TableColumn fx:id="thumb_MV" text="缩略图" sortable="false"/>
                <TableColumn fx:id="name_MV" text="文件名称"/>
                <TableColumn fx:id="fileType_MV" text="文件类型"/>
                <TableColumn fx:id="path_MV" text="文件路径"/>
                <TableColumn fx:id="size_MV" sortType="DESCENDING" text="文件大小"/>
                <TableColumn fx:id="showStatus_MV" text="是否隐藏"/>
                <TableColumn fx:id="creatDate_MV" text="创建时间"/>
                <TableColumn fx:id="updateDate_MV" text="修改时间"/>
            </columns>
        </TableView>

        <HBox fx:id="tipHBox_MV" spacing="10">
            <ProgressBar fx:id="progressBar_MV" visible="false" prefWidth="200.0" progress="0.0"/>
        </HBox>

        <Label fx:id="log_MV" prefHeight="20"/>
    </VBox>
</AnchorPane>
