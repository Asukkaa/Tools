<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.lang.String?>
<AnchorPane fx:id="anchorPane_Set" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            stylesheets="@../css/Styles.css" fx:controller="priv.koishi.tools.Controller.SettingController">
    <VBox fx:id="vBox_Set" spacing="10" AnchorPane.topAnchor="10">

        <Label prefHeight="25" text="功能设置："/>

        <HBox spacing="50">
            <CheckBox fx:id="loadRename_Set" onAction="#loadRenameAction" prefHeight="25" prefWidth="320"
                      style="-fx-cursor: hand"
                      selected="true" text="按指定规则批量重命名文件 功能加载上次设置信息"/>

            <CheckBox fx:id="loadImgToExcel_Set" onAction="#loadImgToExcelAction" prefHeight="25" prefWidth="320"
                      style="-fx-cursor: hand"
                      selected="true" text="将图片与excel匹配并插入 功能加载上次设置信息"/>

            <CheckBox fx:id="lastTab_Set" onAction="#loadLastTabAction" prefHeight="25" style="-fx-cursor: hand"
                      selected="true" text="记住关闭前打开的页面"/>
        </HBox>

        <HBox spacing="50">
            <CheckBox fx:id="loadFileNum_Set" onAction="#loadFileNumAction" prefHeight="25" prefWidth="320"
                      style="-fx-cursor: hand" selected="true" text="分组统计文件夹下文件数量 功能加载上次设置信息"/>

            <CheckBox fx:id="loadFileName_Set" onAction="#loadFileNameAction" prefHeight="25" prefWidth="320"
                      style="-fx-cursor: hand" selected="true" text="获取文件夹下的文件名称 功能加载上次设置信息"/>

            <CheckBox fx:id="fullWindow_Set" onAction="#loadFullWindowAction" prefHeight="25"
                      style="-fx-cursor: hand" selected="true" text="记住程序关闭时窗口是否最大化"/>
        </HBox>

        <HBox spacing="10">
            <Label prefHeight="25" text="文件查询默认排序设置:"/>
            <ChoiceBox fx:id="sort_Set" onAction="#sortAction" prefHeight="25" prefWidth="150">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="不排序"/>
                        <String fx:value="按文件名称排序"/>
                        <String fx:value="按文件创建时间排序"/>
                        <String fx:value="按文件修改时间排序"/>
                        <String fx:value="按文件大小排序"/>
                        <String fx:value="按文件类型排序"/>
                    </FXCollections>
                </items>
                <value>
                    <String fx:value="按文件修改时间排序"/>
                </value>
            </ChoiceBox>

            <Label prefWidth="55"/>
            <CheckBox fx:id="reverseSort_Set" onAction="#reverseSorAction" prefHeight="25" style="-fx-cursor: hand"
                      text="默认倒序排序"/>
        </HBox>

        <Separator/>

        <Label prefHeight="25" text="内存设置："/>

        <HBox spacing="5">
            <Label prefHeight="25" text="当前程序分配的最大内存："/>
            <Label prefHeight="25" prefWidth="130" fx:id="runningMemory_Set"/>
            <Label prefHeight="25" text="操作系统内存："/>
            <Label prefHeight="25" fx:id="systemMemory_Set"/>
        </HBox>

        <HBox spacing="5">
            <Label prefHeight="25" text="下次启动时程序分配最大内存："/>
            <TextField fx:id="nextRunMemory_Set" prefHeight="20" prefWidth="50"/>
            <Label prefHeight="25" prefWidth="50" text="GB"/>
            <Button fx:id="reLaunch_Set" onAction="#reLaunch" style="-fx-cursor: hand" text="立刻重启程序"/>
        </HBox>

        <HBox spacing="5">
            <Label prefHeight="25" text="当前程序所在目录："/>
            <Label prefHeight="25" fx:id="thisPath_Set" styleClass="label-button-style"/>
        </HBox>

        <Separator/>

        <Label prefHeight="25" text="功能页面设置："/>

        <Label prefHeight="25" text="拖拽选中数据行即可更改功能页面顺序，列表数据从上到下对应功能页顺序为从左到右，更改启用勾选设置即可启用或禁用相关页面功能，更改设置后下次启动程序生效。"/>

        <TableView fx:id="tableView_Set">
            <columns>
                <TableColumn fx:id="tabName_Set" text="功能名称"/>
                <TableColumn fx:id="activationCheckBox_Set" text="启用状态"/>
            </columns>
        </TableView>
    </VBox>
</AnchorPane>
