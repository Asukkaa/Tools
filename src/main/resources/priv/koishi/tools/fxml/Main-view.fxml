<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="priv.koishi.tools.Controller.MainController">
    <TabPane fx:id="tabPane" tabClosingPolicy="UNAVAILABLE">
        <Tab style="-fx-cursor: hand" fx:id="fileRenameTab" text="文件重命名工具">
            <ScrollPane fitToWidth="true" fitToHeight="true">
                <AnchorPane>
                    <fx:include source="FileRename-tab.fxml"/>
                </AnchorPane>
            </ScrollPane>
        </Tab>

        <Tab style="-fx-cursor: hand" fx:id="moveFileTab" text="文件移动工具">
            <ScrollPane fitToWidth="true" fitToHeight="true">
                <AnchorPane>
                    <fx:include source="MoveFile-tab.fxml"/>
                </AnchorPane>
            </ScrollPane>
        </Tab>

        <Tab style="-fx-cursor: hand" fx:id="copyFileTab" text="文件复制工具">
            <ScrollPane fitToWidth="true" fitToHeight="true">
                <AnchorPane>
                    <fx:include source="CopyFile-tab.fxml"/>
                </AnchorPane>
            </ScrollPane>
        </Tab>

        <Tab style="-fx-cursor: hand" fx:id="imgToExcelTab" text="excel插入图片工具">
            <ScrollPane fitToWidth="true" fitToHeight="true">
                <AnchorPane>
                    <fx:include source="ImgToExcel-tab.fxml"/>
                </AnchorPane>
            </ScrollPane>
        </Tab>

        <Tab style="-fx-cursor: hand" fx:id="fileNameToExcelTab" text="获取文件夹下的文件信息工具">
            <ScrollPane fitToWidth="true" fitToHeight="true">
                <AnchorPane>
                    <fx:include source="FileNameToExcel-tab.fxml"/>
                </AnchorPane>
            </ScrollPane>
        </Tab>

        <Tab style="-fx-cursor: hand" fx:id="autoClickTab" text="自动操作工具">
            <ScrollPane fitToWidth="true" fitToHeight="true">
                <AnchorPane>
                    <fx:include source="AutoClick-tab.fxml"/>
                </AnchorPane>
            </ScrollPane>
        </Tab>

        <Tab style="-fx-cursor: hand" fx:id="settingTab" text="设置">
            <ScrollPane fitToWidth="true" fitToHeight="true">
                <AnchorPane>
                    <fx:include source="Setting-tab.fxml"/>
                </AnchorPane>
            </ScrollPane>
        </Tab>

        <Tab style="-fx-cursor: hand" fx:id="aboutTab" text="关于">
            <ScrollPane fitToWidth="true" fitToHeight="true">
                <AnchorPane>
                    <fx:include source="About-tab.fxml"/>
                </AnchorPane>
            </ScrollPane>
        </Tab>
    </TabPane>
</VBox>
