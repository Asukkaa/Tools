<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane fx:id="anchorPane_FC" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" stylesheets="@../css/Styles.css"
            fx:controller="priv.koishi.tools.Controller.FileChooserController">
    <VBox spacing="10" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="30">
        <HBox spacing="10">
            <Button fx:id="outPathButton_FC" onAction="#selectFilePath" style="-fx-cursor: hand" text="选择要查询的文件夹"/>
            <Label fx:id="outPath_FC" prefHeight="25" style="-fx-font-size: 15px;"/>
        </HBox>

        <HBox fx:id="fileNumberHBox_FC" spacing="10">
            <Button fx:id="addFileButton_FC" onAction="#gotoParent" styleClass="cadetblue-button" text="前往上级文件夹"/>

            <Label fx:id="fileNumber_FC" alignment="CENTER_RIGHT" prefHeight="20" text="列表为空"/>
        </HBox>

        <TableView fx:id="tableView_FC" onDragDropped="#handleDrop" onDragOver="#acceptDrop">
            <placeholder>
                <Label text="拖拽 或点击 选择要读取的文件夹 按钮向列表添加文件"/>
            </placeholder>

            <columns>
                <TableColumn fx:id="index_FC" text="序号" sortable="false"/>
                <TableColumn fx:id="thumb_FC" text="缩略图" sortable="false"/>
                <TableColumn fx:id="name_FC" text="文件名称"/>
                <TableColumn fx:id="fileType_FC" text="文件类型"/>
                <TableColumn fx:id="path_FC" text="文件路径"/>
                <TableColumn fx:id="size_FC" sortType="DESCENDING" text="文件大小"/>
                <TableColumn fx:id="showStatus_FC" text="是否隐藏"/>
                <TableColumn fx:id="creatDate_FC" text="创建时间"/>
                <TableColumn fx:id="updateDate_FC" text="修改时间"/>
            </columns>
        </TableView>

        <HBox spacing="10">
            <Label prefWidth="400"/>
            <Button text="确认选择" onAction="#selectFile"/>
            <Button text="取消" style="-fx-cursor: hand" onAction="#cancelSelect"/>
        </HBox>
    </VBox>
</AnchorPane>
